      }
    },
    "existingAcrName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Existing ACR name"
      }
    },
    "existingAcrResourceGroup": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Existing ACR resource group"
      }
    },
    "existingAcrSubscriptionId": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Existing ACR subscription ID"
      }
    },
    "existingLogAnalyticsName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Existing Log Analytics Workspace name"
      }
    },
    "existingLogAnalyticsResourceGroup": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Existing Log Analytics Workspace resource group"
      }
    },
    "existingLogAnalyticsSubscriptionId": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Existing Log Analytics Workspace subscription ID"
      }
    },
    "existingIdentityName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Existing User Assigned Identity name"
