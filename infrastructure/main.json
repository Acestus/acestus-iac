    "existingIdentityResourceGroup": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Existing User Assigned Identity resource group"
      }
    },
    "existingAppInsightsName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Existing Application Insights name"
      }
    },
    "existingAppInsightsResourceGroup": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Existing Application Insights resource group"
      }
    }
  },
  "variables": {
    "cafName": "[format('{0}-{1}-{2}-{3}', parameters('projectName'), parameters('environment'), parameters('regionCode'), parameters('instanceNumber'))]",
    "defaultTags": {
      "ManagedBy": "https://github.com/<your-org>/<your-repo>",
      "CreatedBy": "[parameters('createdBy')]",
      "Environment": "[if(equals(parameters('environment'), 'prd'), 'Production', 'Development')]",
      "Project": "AKS Template - .NET",
      "CAFName": "[variables('cafName')]"
    },
    "mergedTags": "[union(variables('defaultTags'), parameters('tags'))]",
    "aksClusterName": "[format('aks-{0}-{1}-{2}-{3}', parameters('projectName'), parameters('environment'), parameters('regionCode'), parameters('instanceNumber'))]",
    "logAnalyticsName": "[format('log-{0}', variables('cafName'))]",
    "storageAccountName": "[format('st{0}{1}{2}{3}', parameters('projectName'), parameters('environment'), parameters('regionCode'), parameters('instanceNumber'))]",
    "useExistingAcr": "[not(equals(parameters('existingAcrName'), ''))]",
    "useExistingLogAnalytics": "[not(equals(parameters('existingLogAnalyticsName'), ''))]",
    "useExistingIdentity": "[not(equals(parameters('existingIdentityName'), ''))]",
    "useExistingAppInsights": "[not(equals(parameters('existingAppInsightsName'), ''))]"
  },
  "resources": [
    {
      "condition": "[not(variables('useExistingLogAnalytics'))]",
      "type": "Microsoft.OperationalInsights/workspaces",
      "apiVersion": "2022-10-01",
      "name": "[variables('logAnalyticsName')]",
      "location": "[parameters('location')]",
      "tags": "[variables('mergedTags')]",
      "properties": {
        "sku": {
          "name": "PerGB2018"
        },
        "retentionInDays": 30
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2023-01-01",
      "name": "[variables('storageAccountName')]",
      "location": "[parameters('location')]",
      "tags": "[variables('mergedTags')]",
      "sku": {
        "name": "Standard_LRS"
      },
      "kind": "StorageV2",
      "properties": {
        "accessTier": "Hot",
        "allowBlobPublicAccess": false,
        "minimumTlsVersion": "TLS1_2",
        "supportsHttpsTrafficOnly": true
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts/blobServices",
      "apiVersion": "2023-01-01",
      "name": "[format('{0}/{1}', variables('storageAccountName'), 'default')]",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
      ]
    },
    {
      "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
      "apiVersion": "2023-01-01",
      "name": "[format('{0}/{1}/{2}', variables('storageAccountName'), 'default', 'time-logs')]",
      "properties": {
        "publicAccess": "None"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts/blobServices', variables('storageAccountName'), 'default')]"
      ]
    },
    {
      "type": "Microsoft.ContainerService/managedClusters",
      "apiVersion": "2024-01-01",
      "name": "[variables('aksClusterName')]",
      "location": "[parameters('location')]",
      "tags": "[variables('mergedTags')]",
      "sku": {
        "name": "Base",
        "tier": "[if(equals(parameters('environment'), 'prd'), 'Standard', 'Free')]"
      },
      "identity": "[if(variables('useExistingIdentity'), createObject('type', 'UserAssigned', 'userAssignedIdentities', createObject(format('{0}', extensionResourceId(format('/subscriptions/{0}/resourceGroups/{1}', subscription().subscriptionId, parameters('existingIdentityResourceGroup')), 'Microsoft.ManagedIdentity/userAssignedIdentities', parameters('existingIdentityName'))), createObject())), createObject('type', 'SystemAssigned'))]",
      "properties": {
        "dnsPrefix": "[variables('aksClusterName')]",
        "kubernetesVersion": "[parameters('kubernetesVersion')]",
        "supportPlan": "KubernetesOfficial",
        "enableRBAC": true,
        "agentPoolProfiles": [
          {
            "name": "systempool",
            "count": "[parameters('nodeCount')]",
            "vmSize": "[parameters('nodeVmSize')]",
            "osType": "Linux",
            "osSKU": "AzureLinux",
            "mode": "System",
            "enableAutoScaling": "[equals(parameters('environment'), 'prd')]",
            "minCount": "[if(equals(parameters('environment'), 'prd'), 2, null())]",
            "maxCount": "[if(equals(parameters('environment'), 'prd'), 5, null())]"
          }
        ],
        "networkProfile": {
          "networkPlugin": "azure",
          "networkPolicy": "azure",
          "loadBalancerSku": "standard"
        },
        "addonProfiles": {
          "omsagent": {
            "enabled": true,
            "config": {
              "logAnalyticsWorkspaceResourceID": "[if(variables('useExistingLogAnalytics'), extensionResourceId(format('/subscriptions/{0}/resourceGroups/{1}', parameters('existingLogAnalyticsSubscriptionId'), parameters('existingLogAnalyticsResourceGroup')), 'Microsoft.OperationalInsights/workspaces', parameters('existingLogAnalyticsName')), resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsName')))]"
            }
          }
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsName'))]"
      ]
    }
  ],
  "outputs": {
    "aksClusterName": {
      "type": "string",
      "value": "[variables('aksClusterName')]"
    },
    "aksClusterFqdn": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.ContainerService/managedClusters', variables('aksClusterName')), '2024-01-01').fqdn]"
    },
    "logAnalyticsWorkspaceId": {
      "type": "string",
      "value": "[if(variables('useExistingLogAnalytics'), extensionResourceId(format('/subscriptions/{0}/resourceGroups/{1}', parameters('existingLogAnalyticsSubscriptionId'), parameters('existingLogAnalyticsResourceGroup')), 'Microsoft.OperationalInsights/workspaces', parameters('existingLogAnalyticsName')), resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsName')))]"
    },
    "appInsightsName": {
      "type": "string",
      "value": "[if(variables('useExistingAppInsights'), parameters('existingAppInsightsName'), '')]"
    },
    "appInsightsInstrumentationKey": {
      "type": "string",
      "value": "[if(variables('useExistingAppInsights'), reference(extensionResourceId(format('/subscriptions/{0}/resourceGroups/{1}', subscription().subscriptionId, parameters('existingAppInsightsResourceGroup')), 'Microsoft.Insights/components', parameters('existingAppInsightsName')), '2020-02-02').InstrumentationKey, '')]"
    },
    "storageAccountName": {
      "type": "string",
      "value": "[variables('storageAccountName')]"
    },
    "storageAccountId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
    },
    "acrLoginServer": {
      "type": "string",
      "value": "[if(variables('useExistingAcr'), reference(extensionResourceId(format('/subscriptions/{0}/resourceGroups/{1}', if(not(equals(parameters('existingAcrSubscriptionId'), '')), parameters('existingAcrSubscriptionId'), subscription().subscriptionId), parameters('existingAcrResourceGroup')), 'Microsoft.ContainerRegistry/registries', parameters('existingAcrName')), '2023-07-01').loginServer, '')]"
    },
    "acrName": {
      "type": "string",
      "value": "[if(variables('useExistingAcr'), parameters('existingAcrName'), '')]"
    }
  }
}
