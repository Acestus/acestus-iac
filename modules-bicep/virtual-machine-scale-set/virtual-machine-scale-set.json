      "metadata": {
        "description": "Enable single placement group"
      }
    },
    "platformFaultDomainCount": {
      "type": "int",
      "defaultValue": 1,
      "metadata": {
        "description": "Platform fault domain count"
      }
    }
  },
  "variables": {
    "copy": [
      {
        "name": "lbPools",
        "count": "[length(parameters('loadBalancerBackendAddressPoolIds'))]",
        "input": {
          "id": "[parameters('loadBalancerBackendAddressPoolIds')[copyIndex('lbPools')]]"
        }
      },
      {
        "name": "appGwPools",
        "count": "[length(parameters('applicationGatewayBackendAddressPoolIds'))]",
        "input": {
          "id": "[parameters('applicationGatewayBackendAddressPoolIds')[copyIndex('appGwPools')]]"
        }
      },
      {
        "name": "asgList",
        "count": "[length(parameters('applicationSecurityGroupIds'))]",
        "input": {
          "id": "[parameters('applicationSecurityGroupIds')[copyIndex('asgList')]]"
        }
      }
    ],
    "identityType": "[if(parameters('enableSystemAssignedIdentity'), if(not(empty(parameters('userAssignedIdentityIds'))), 'SystemAssigned, UserAssigned', 'SystemAssigned'), if(not(empty(parameters('userAssignedIdentityIds'))), 'UserAssigned', 'None'))]",
    "userAssignedIdentities": "[if(not(empty(parameters('userAssignedIdentityIds'))), reduce(parameters('userAssignedIdentityIds'), createObject(), lambda('cur', 'next', union(lambdaVariables('cur'), createObject(format('{0}', lambdaVariables('next')), createObject())))), null())]",
    "ipConfigurations": [
      {
        "name": "ipconfig1",
        "properties": {
          "primary": true,
          "subnet": {
            "id": "[parameters('subnetId')]"
          },
          "publicIPAddressConfiguration": "[if(parameters('enablePublicIP'), createObject('name', 'pip', 'properties', createObject('idleTimeoutInMinutes', 15)), null())]",
          "loadBalancerBackendAddressPools": "[variables('lbPools')]",
          "applicationGatewayBackendAddressPools": "[variables('appGwPools')]",
          "applicationSecurityGroups": "[variables('asgList')]"
        }
      }
    ],
    "linuxConfiguration": "[if(equals(parameters('osType'), 'Linux'), createObject('disablePasswordAuthentication', not(empty(parameters('sshPublicKey'))), 'ssh', if(not(empty(parameters('sshPublicKey'))), createObject('publicKeys', createArray(createObject('path', format('/home/{0}/.ssh/authorized_keys', parameters('adminUsername')), 'keyData', parameters('sshPublicKey')))), null())), null())]",
    "windowsConfiguration": "[if(equals(parameters('osType'), 'Windows'), createObject('enableAutomaticUpdates', true(), 'provisionVMAgent', true(), 'patchSettings', createObject('patchMode', 'AutomaticByPlatform', 'automaticByPlatformSettings', createObject('rebootSetting', 'IfRequired'))), null())]"
  },
  "resources": [
    {
      "type": "Microsoft.Compute/virtualMachineScaleSets",
      "apiVersion": "2024-07-01",
      "name": "[parameters('name')]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "sku": {
        "name": "[parameters('skuName')]",
        "tier": "Standard",
        "capacity": "[parameters('capacity')]"
      },
      "zones": "[if(not(empty(parameters('zones'))), parameters('zones'), null())]",
      "identity": "[if(not(equals(variables('identityType'), 'None')), createObject('type', variables('identityType'), 'userAssignedIdentities', variables('userAssignedIdentities')), null())]",
      "properties": {
        "overprovision": "[parameters('overprovision')]",
        "singlePlacementGroup": "[parameters('singlePlacementGroup')]",
        "platformFaultDomainCount": "[parameters('platformFaultDomainCount')]",
        "upgradePolicy": {
          "mode": "[parameters('upgradeMode')]",
          "automaticOSUpgradePolicy": "[if(not(equals(parameters('upgradeMode'), 'Manual')), createObject('enableAutomaticOSUpgrade', parameters('enableAutomaticOSUpgrade'), 'disableAutomaticRollback', false()), null())]",
          "rollingUpgradePolicy": "[if(equals(parameters('upgradeMode'), 'Rolling'), parameters('rollingUpgradePolicy'), null())]"
        },
        "scaleInPolicy": {
          "rules": [
            "[parameters('scaleInPolicyRules')]"
          ]
        },
        "virtualMachineProfile": {
          "osProfile": {
            "computerNamePrefix": "[take(parameters('name'), 9)]",
            "adminUsername": "[parameters('adminUsername')]",
            "adminPassword": "[if(not(empty(parameters('adminPassword'))), parameters('adminPassword'), null())]",
            "customData": "[if(not(empty(parameters('customData'))), parameters('customData'), null())]",
            "linuxConfiguration": "[variables('linuxConfiguration')]",
            "windowsConfiguration": "[variables('windowsConfiguration')]"
          },
          "storageProfile": {
            "copy": [
              {
                "name": "dataDisks",
                "count": "[length(parameters('dataDisks'))]",
                "input": {
                  "lun": "[copyIndex('dataDisks')]",
                  "createOption": "Empty",
                  "diskSizeGB": "[parameters('dataDisks')[copyIndex('dataDisks')].sizeGB]",
                  "caching": "[coalesce(tryGet(parameters('dataDisks')[copyIndex('dataDisks')], 'caching'), 'ReadOnly')]",
                  "managedDisk": {
                    "storageAccountType": "[coalesce(tryGet(parameters('dataDisks')[copyIndex('dataDisks')], 'storageAccountType'), 'Premium_ZRS')]"
                  }
                }
              }
            ],
            "imageReference": {
              "publisher": "[parameters('imagePublisher')]",
              "offer": "[parameters('imageOffer')]",
              "sku": "[parameters('imageSku')]",
              "version": "[parameters('imageVersion')]"
            },
            "osDisk": {
              "createOption": "FromImage",
              "caching": "[parameters('osDiskCaching')]",
              "diskSizeGB": "[parameters('osDiskSizeGB')]",
              "managedDisk": {
                "storageAccountType": "[parameters('osDiskType')]"
              }
            }
          },
          "networkProfile": {
            "networkInterfaceConfigurations": [
              {
                "name": "[format('{0}-nic', parameters('name'))]",
                "properties": {
                  "primary": true,
                  "enableAcceleratedNetworking": true,
                  "ipConfigurations": "[variables('ipConfigurations')]"
                }
              }
            ]
          },
          "diagnosticsProfile": {
            "bootDiagnostics": {
              "enabled": "[parameters('enableBootDiagnostics')]",
              "storageUri": "[if(not(empty(parameters('bootDiagnosticsStorageUri'))), parameters('bootDiagnosticsStorageUri'), null())]"
            }
          },
          "securityProfile": {
            "encryptionAtHost": "[parameters('encryptionAtHost')]"
          }
        }
      }
    }
  ],
  "outputs": {
    "resourceId": {
      "type": "string",
      "metadata": {
        "description": "The resource ID of the VMSS"
      },
      "value": "[resourceId('Microsoft.Compute/virtualMachineScaleSets', parameters('name'))]"
    },
    "name": {
      "type": "string",
      "metadata": {
        "description": "The name of the VMSS"
      },
      "value": "[parameters('name')]"
    },
    "systemAssignedMIPrincipalId": {
      "type": "string",
      "metadata": {
        "description": "The principal ID of the system assigned identity"
      },
      "value": "[coalesce(tryGet(reference(resourceId('Microsoft.Compute/virtualMachineScaleSets', parameters('name')), '2024-07-01', 'full').identity, 'principalId'), '')]"
    }
